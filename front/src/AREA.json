{
    "services": [
        {
            "name": "Discord",
            "actions": [
                {
                    "type": "/repo",
                    "display": "List repositories"
                },
                {
                    "type": "/pr",
                    "display": "List pull requests"
                },
                {
                    "type": "/issue",
                    "display": "List issues"
                },
                {
                    "type": "/spotiplaying",
                    "display": "Display current song"
                },
                {
                    "type": "/likedtrack",
                    "display": "List liked tracks"
                }
            ],
            "reactions": [
                {
                    "type": "message",
                    "display": "Message",
                    "arguments": {
                        "message": {
                            "label": "Message",
                            "description": "The message to send",
                            "component": "TextArea"
                        },
                        "serverId": {
                            "label": "Select a server",
                            "description": "The server to send the message to",
                            "component": "Select"
                        },
                        "channelId": {
                            "label": "Select a channel",
                            "description": "The channel to send the message on",
                            "component": "Select"
                        }
                    }
                },
                {
                    "type": "private_message",
                    "display": "Private Message",
                    "arguments": {
                        "message": {
                            "label": "Message",
                            "description": "The message to send",
                            "component": "TextArea"
                        }
                    }
                }
            ]
        },
        {
            "name": "GitHub",
            "actions": [
                {
                    "type": "new_issue",
                    "display": "New Issue"
                },
                {
                    "type": "new_pr",
                    "display": "New Pull Request"
                },
                {
                    "type": "new_commit",
                    "display": "New Commit"
                },
                {
                    "type": "new_repo",
                    "display": "New Repository"
                }
            ],
            "reactions": [
                {
                  "type": "repo",
                  "display": "List Repositories",
                  "arguments": {
                    "prefix": {
                      "label": "Message",
                      "description": "Message to display before the repository list",
                      "component": "TextArea"
                    }
                  }
                },
                {
                  "type": "pr",
                  "display": "List Pull Requests",
                  "arguments": {
                    "prefix": {
                      "label": "Message",
                      "description": "Message to display before the pull request list",
                      "component": "TextArea"
                    }
                  }
                },
                {
                  "type": "issue",
                  "display": "List Issues",
                  "arguments": {
                    "prefix": {
                      "label": "Message",
                      "description": "Message to display before the issue list",
                      "component": "TextArea"
                    }
                  }
                },
                {
                  "type": "commit",
                  "display": "List Commits",
                  "arguments": {
                    "prefix": {
                      "label": "Message",
                      "description": "Message to display before the commit list",
                      "component": "TextArea"
                    }
                  }
                }
              ]
        },
        {
            "name": "Spotify",
            "actions": [
                {
                    "type": "currently_playing",
                    "display": "Song currently playing"
                },
                {
                    "type": "new_liked_track",
                    "display": "New liked track"
                },
                {
                    "type": "liked_track",
                    "display": "List of favorite songs"
                }
            ],
            "reactions": [
                {
                    "type": "currently_playing",
                    "display": "Song currently playing",
                    "arguments": {
                        "prefix": {
                            "label": "Message",
                            "description": "The song you are listening to is ",
                            "component": "TextArea"
                        }
                    }
                },
                {
                    "type": "liked_track",
                    "display": "List of liked songs",
                    "arguments": {
                        "prefix": {
                            "label": "Message",
                            "description": "Your favorite songs are: ",
                            "component": "TextArea"
                        }
                    }
                }
            ]
        },
        {
            "name": "OneDrive",
            "actions": [],
            "reactions": []
        },
        {
            "name": "Gmail",
            "actions": [],
            "reactions": []
        },
        {
            "name": "Instagram",
            "actions": [],
            "reactions": []
        }
    ]
}
